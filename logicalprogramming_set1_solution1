#include<conio.h>
#include<stdio.h>
int get_int()
{
	int num=0;
	int ret=0;
	ret=scanf("%d",&num);
	if (ret!=1){
	printf("enter valid number");
	scanf("%s");
	num= get_int();
	}  //recall the function if char is entered instead of int

	else if (num<0){
	printf("enter positive number ");
	num= get_int();
	}  //recall the function if negative number is entered instead of positive
return num;
}

float get_float()
{
	float num=0.0;
	int ret=0;
	ret=scanf("%f",&num);
	if (ret!=1){
	printf("\nenter valid number");
	scanf("%s");
	num=get_float();
	}  //recall the function if char is entered instead of float

	else if (num<0){
	printf("\nenter positive number ");
	num=get_float();
	}  //recall the function if negative number is entered instead of positive
return num;
}

float CalculateSI(int p,float n,float r){
	return (p*n*r)/100;
	}   //calculate and return simple interest

void main(){
int principle=0;
float no_of_years=0.0;
float rate_of_interest=0.0;
float simple_interest=0.0;
clrscr();
printf("Enter Principle: ");
principle=get_int();
printf("Enter No of years: ");
no_of_years=get_float();
printf("Enter Rate of interest: ");
rate_of_interest=get_float();
simple_interest=CalculateSI(principle,no_of_years,rate_of_interest);
printf("Simple interest: %.2f",simple_interest);
getch();
}
