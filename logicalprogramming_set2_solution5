#include<stdio.h>
#include<conio.h>
unsigned invert(unsigned x,int p,int n)
{
	return x^((~((~0)<<n))>>(n-p-1));
}
void main()
{
	unsigned number=0;
	int position=0;
	int bits=0;
	clrscr();
	printf("Enter the number ");
	scanf("%u",&number);
	printf("Enter the Position ");
	scanf("%d",&position);
	printf("No of bits ");
	scanf("%d",&bits);
	printf("%u",invert(number,position,bits));
getch();
}
